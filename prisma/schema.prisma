generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Debate {
  id         Int      @id @default(autoincrement())
  topic      String   @db.VarChar(255)
  creatorSub  String
  opponentSub String?
  createdAt  DateTime @default(now()) @db.Timestamp(6)
  creator    User     @relation(fields: [creatorSub], name: "debate_creator", references: [sub])
  opponent   User?    @relation(fields: [opponentSub], name: "debate_opponent", references: [sub])
  turn       Turn[]
}

model Turn {
  id        Int      @id @default(autoincrement())
  body      Json?
  userSub   String
  debateId  Int
  createdAt DateTime @default(now()) @db.Timestamp(6)
  user      User     @relation(fields: [userSub], references: [sub])
  debate    Debate   @relation(fields: [debateId], references: [id])
}

model User {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  sub            String   @unique
  debatesCreated Debate[] @relation(name: "debate_creator")
  debatesOpposed Debate[] @relation(name: "debate_opponent")
  turn           Turn[]
  createdAt      DateTime @default(now())
}
